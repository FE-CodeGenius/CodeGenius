{
  "name": "code-genius",
  "version": "0.4.22",
  "description": "CodeGenius's command line tools",
  "author": {
    "name": "OSpoon",
    "email": "zxin088@gmail.com",
    "url": "https://github.com/OSpoon"
  },
  "license": "MIT",
  "homepage": "https://github.com/OSpoon/CodeGenius#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OSpoon/CodeGenius.git"
  },
  "bugs": {
    "url": "https://github.com/OSpoon/CodeGenius/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "cg": "./bin/codeGenius.mjs",
    "codeg": "./bin/codeGenius.mjs",
    "code-genius": "./bin/codeGenius.mjs"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=14.17"
  },
  "scripts": {
    "prepare": "esno scripts/prepare.ts",
    "build": "unbuild",
    "stub": "unbuild --stub",
    "release": "release-it"
  },
  "keywords": [
    "CodeGenius",
    "codeGenius",
    "Genius",
    "genius",
    "CLI",
    "cli"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^7.0.1",
    "@types/eslint": "^8.44.3",
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.6.2",
    "@types/rimraf": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "esno": "^0.17.0",
    "release-it": "^16.1.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0-rc.0"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "cac": "^6.7.14",
    "enquirer": "^2.4.1",
    "eslint": "^8.50.0",
    "execa": "^5.1.1",
    "fs-extra": "^11.1.1",
    "kolorist": "^1.8.0",
    "simple-update-notifier": "^2.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx cross-env CG_DEBUG=activation esno scripts/lint-script.ts",
    "commit-msg": "npx cross-env CG_DEBUG=activation esno scripts/cmv-script.ts"
  }
}
